- model_class = Image
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @image.name
    %dt.label.label-default= model_class.human_attribute_name(:tag_line)
    %dd
      %pre.prettyprint= @image.tag_line
    %dt.label.label-default= model_class.human_attribute_name(:avatar)
    %dd
      %pre.prettyprint= image_tag @image.avatar.url(:thumb)

.form-group
  = link_to t('.back', :default => t("helpers.links.back")),images_path, :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")),edit_image_path(@image), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")),
    image_path(@image),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger'
