= form_for @image, :html => { :multipart => true, :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :name, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :name, :class => 'text_field form-control'
  .form-group
    = f.label :tag_line, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :tag_line, :class => 'text_field form-control'
  .form-group
    = f.label :photo, :class => 'control-label col-md-2'
    .col-md-10
      = f.file_field :avatar
  .form-group
    .col-md-offset-2.col-md-10
      = f.hidden_field :album_id, value: @album.id
      = f.hidden_field :user_id, value: @user_id
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")),images_path, :class => 'btn btn-default'